{
  "rooms": {
    "#room_entrance": {
      "alias": "entrance room",
      "description": "There are some things just laying around in the room.",
      "directions": {
        "west": {
          "room_id": "#room_arena"
        }
      },
      "items": [
        "#item_envelope",
        "#equipment_silver_sword",
        "#item_bandage",
        "#equipment_gladiator_helmet",
        "#item_poison_bottle",
        "#equipment_steel_chestplate"
      ],
      "creatures": [],
      "actions": {},
      "auto_commands": {}
    },
    "#room_arena": {
      "alias": "arena",
      "description": "Big round arena.",
      "directions": {
        "east": {
          "room_id": "#room_entrance"
        },
        "north": {
          "trans_obj_id": "#trans_door_exit",
          "room_id": "#room_exit"
        }
      },
      "items": [],
      "creatures": [
        "#creature_dragon"
      ],
      "actions": {},
      "auto_commands": {}
    },
    "#room_exit": {
      "alias": "exit",
      "description": "The end",
      "directions": {},
      "items": [],
      "creatures": [],
      "actions": {},
      "auto_commands": {
        "command_good_end": "Congratulations Hero!\nYou are free. Do anything you want, be who you want to be."
      }
    }
  },
  "creatures": {
    "#creature_dragon": {
      "alias": [
        "green dragon",
        "dragon"
      ],
      "health": 60,
      "damage": 10,
      "drops": [
        "#item_doorkey_exit"
      ],
      "description": "Big green dragon",
      "actions": {}
    }
  },
  "transition_objects": {
    "#trans_door_exit": {
      "alias": [
        "door"
      ],
      "locked": true,
      "description": "Exit door is locked, you need a key",
      "actions": {
        "open": {
          "command_show_description": null
        },
        "unlock": {
          "command_required_items": ["#item_doorkey_exit"],
          "command_set_locked": false,
          "command_remove_items_from_inventory": ["#item_doorkey_exit"],
          "command_set_description": "Exit door is unlocked, you can leave",
          "command_show_description": null
        }
      }
    }
  },
  "items": {
    "regular": {
      "#item_envelope": {
        "description": "OPEN to get letter from inside",
        "alias": [
          "envelope"
        ],
        "actions": {
          "open": {
            "command_spawn_items": ["#item_letter"],
            "command_despawn_items": ["#item_envelope"],
            "command_remove_items_from_inventory": ["#item_envelope"],
            "command_show_message": "You have found a letter inside."
          }
        }
      },
      "#item_letter": {
        "description": "READ to read content",
        "alias": [
          "letter"
        ],
        "actions": {
          "read": {
            "command_show_message": "A green dragon guards a key to the exit door.\nYou must kill the dragon and take the key from its dead body."
          }
        }
      },
      "#item_doorkey_exit": {
        "description": "Use this key to unlock the door in the arena",
        "alias": [
          "key"
        ],
        "actions": {}
      }
    },
    "consumable": {
      "#item_bandage": {
        "value": 25,
        "description": "You can USE bandage to reduce swelling or slow heavy bleeding",
        "alias": [
          "bandage",
          "bandages"
        ],
        "actions": {
          "use": {
            "command_consume_item": true
          }
        }
      },
      "#item_poison_bottle": {
        "value": -75,
        "description": "Small unlabelled bottle with strange liquid inside. USE may lead to bad consequences",
        "alias": [
          "unlabelled bottle",
          "bottle",
          "strange bottle"
        ],
        "actions": {
          "use": {
            "command_consume_item": true,
            "command_show_message": "It was a poison."
          },
          "drink": {
            "command_consume_item": true,
            "command_show_message": "It was a poison."
          }
        }
      }
    }
  },
  "equipment": {
    "weapons": {
      "#equipment_silver_sword": {
        "damage": 30,
        "alias": [
          "sword",
          "silver sword"
        ],
        "slot": "weapon_slot",
        "description": "Sword made of pure silver with a straight double-edged blade and a grip for two-handed use",
        "actions": {}
      }
    },
    "armour": {
      "#equipment_gladiator_helmet": {
        "resistance": 2,
        "durability": 12,
        "alias": [
          "helmet",
          "gladiator helmet",
          "steel helmet"
        ],
        "slot": "head_slot",
        "description": "Gladiator helmet made of steel",
        "actions": {}
      },
      "#equipment_steel_chestplate": {
        "resistance": 3,
        "durability": 18,
        "alias": [
          "chestplate",
          "steel chestplate"
        ],
        "slot": "chest_slot",
        "description": "Steel chestplate armor",
        "actions": {}
      }
    }
  },
  "hero": {
    "health": 100,
    "base_damage": 1,
    "location": "#room_entrance",
    "weapon_slot": null,
    "head_slot": null,
    "chest_slot": null,
    "legs_slot": null,
    "actions": {},
    "inventory": []
  }
}